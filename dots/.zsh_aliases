# Open zsh config
alias zshconfig="code-insiders ~/.zshrc"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# ALias to VSCode
alias code='code-insiders '

# Update and Cleanup env
alias updateOs='updateRb; updateNode; updateNpm; updateYarn; upgrade_oh_my_zsh; antibody update; echo "\n$(tput setaf 2)Everything updated!\n"'
alias updateRb='gem update --system; gem update --no-document; gem cleanup; echo "\n$(tput setaf 2)Ruby gems updated!\n"'
alias updateNpm='sudo npm cache clean -f; npm install npm -g; npm update -g; echo "\n$(tput setaf 2)NPM updated!\n"'
alias updateYarn='yarn cache clean --force; yarn global upgrade --latest; echo "\n$(tput setaf 2)Yarn updated!\n"'
alias updateNode='sudo n latest; echo "\n$(tput setaf 2)Node updated!\n"'

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
	export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
else # macOS `ls`
	colorflag="-G"
	export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
fi

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Chmod -x
alias chmox='chmod -x'

# Always use color output for `ls`
alias ls="exa -s type --group-directories-first --git"

# List all files colorized in long format
alias l="ls -lFh -s type --group-directories-first --git"

# List all files colorized in long format
alias ll="ls -lFh -s type --group-directories-first --git"

# List all files colorized in long format, including dot files
alias la="ls -laFh -s type --group-directories-first --git"

# List only directories
alias lsd="ls -lFh | grep --color=never '^d'"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# sudo editors
alias vim='nvim'
alias svim='sudo vim'
alias snano='sudo nano'

# Go to git root
alias groot='cd `git rev-parse --show-toplevel`'
