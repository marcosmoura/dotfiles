alias yabai_rule='yabai -m rule --add '
alias yabai_config='yabai -m config '
alias yabai_space='yabai -m space '
alias yabai_unmanage='yabai_rule manage=off layer=above '

## Global settings
yabai_config auto_balance                  off
yabai_config focus_follows_mouse           off
yabai_config mouse_action1                 move
yabai_config mouse_action2                 resize
yabai_config mouse_follows_focus           off
yabai_config mouse_modifier                fn
yabai_config split_ratio                   0.5
yabai_config window_placement              first_child
yabai_config window_topmost                on


## General space settings
yabai_config layout                        bsp
yabai_config top_padding                   16
yabai_config bottom_padding                16
yabai_config left_padding                  16
yabai_config right_padding                 16
yabai_config window_gap                    16


## Label spaces
yabai_space 1 --label code
yabai_space 2 --label browser
yabai_space 3 --label communication
yabai_space 4 --label mail
yabai_space 5 --label music
yabai_space 6 --label terminal
yabai_space 7 --label productivity
yabai_space 8 --label finder
yabai_space 9 --label design


## Spaces layouts
yabai_config --space browser layout stack
yabai_config --space communication layout float
yabai_config --space terminal layout stack


## Space - Code
yabai_rule label="Visual Studio Code" app="^Visual Studio Code - Insiders$" space="code"
