layout {
  pane_template {
    name "fluent-pane"
    cwd "~/Projects/fluent/fluentui"
  }

  tab name="editor" {
    pane split_direction="vertical" {
      fluent-pane {
        name "neovim"
        command "/opt/homebrew/bin/nvim"
        args "."
      }

      pane {
        name "file explorer"
        command "/opt/homebrew/bin/yazi"
        args "--client-id" "999"
        size 45
      }
    }
  }

  tab name="terminal" {
    pane split_direction="vertical" {
      fluent-pane name=""
      fluent-pane name=""
    }
  }

  tab name="github" {
    fluent-pane {
      name ""
      command "/opt/homebrew/bin/gh"
      args "dash"
      borderless true
    }
  }

  default_tab_template {
    pane borderless=true size=1 {
      plugin location="custom_status_bar"
    }
    children
  }
}
