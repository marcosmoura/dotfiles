# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.rs]
indent_size = 4

[*.py]
indent_size = 4

[*.lua]
indent_size = 2

[*.sh]
indent_size = 2
