#### Events
####################################################################################################

yabai -m signal --add event=space_changed action="node ~/.zsh/modules/yabai/bin/wallpaper-manager change"
yabai -m signal --add event=display_added action="zsh ~/.zsh/modules/yabai/scripts/reload-yabai.zsh"
yabai -m signal --add event=display_removed action="zsh ~/.zsh/modules/yabai/scripts/reload-yabai.zsh"
