# Misc
ctrl + cmd - y : zsh ~/.config/zsh/modules/yabai/scripts/reload-yabai.zsh
ctrl + cmd - l: zsh ~/.config/zsh/modules/yabai/scripts/lock-screen.zsh
ctrl + cmd - d: yabai -m space --toggle show-desktop
ctrl + cmd - x: yabai -m window --close


# Move windows
ctrl + cmd - up: zsh ~/.config/zsh/modules/yabai/scripts/move-windows.zsh top
ctrl + cmd - right: zsh ~/.config/zsh/modules/yabai/scripts/move-windows.zsh right
ctrl + cmd - down: zsh ~/.config/zsh/modules/yabai/scripts/move-windows.zsh bottom
ctrl + cmd - left: zsh ~/.config/zsh/modules/yabai/scripts/move-windows.zsh left


## Move windows between desktops
ctrl + cmd + alt - left: yabai -m window --display next; yabai -m display --focus next
ctrl + cmd + alt - right: yabai -m window --display prev; yabai -m display --focus prev


# Focus windows
ctrl + cmd + shift - up: yabai -m window --focus north
ctrl + cmd + shift - down: yabai -m window --focus south
ctrl + cmd + shift - right: yabai -m window --focus east
ctrl + cmd + shift - left: yabai -m window --focus west
ctrl + cmd + shift - 0x21: yabai -m window --focus prev # 0x21 is [
ctrl + cmd + shift - 0x1E: yabai -m window --focus next # 0x1E is ]


## Focus monitors
ctrl + alt + shift - left: yabai -m display --focus west
ctrl + alt + shift - right: yabai -m display --focus east


# Resize
ctrl + cmd - 0x18: yabai -m window --resize right:50:50 --resize left:-50:-50 --resize bottom:50:50 --resize top:-50:-50 # plus
ctrl + cmd - 0x1B: yabai -m window --resize right:-50:-50 --resize left:50:50 --resize bottom:-50:-50 --resize top:50:50 # minus


# Layouts
ctrl + cmd - b: yabai -m space --layout bsp
ctrl + cmd - f: yabai -m space --layout float
ctrl + cmd - m: yabai -m space --layout stack
ctrl + cmd - v: zsh ~/.config/zsh/modules/yabai/scripts/split-layout.zsh vertical
ctrl + cmd - h: zsh ~/.config/zsh/modules/yabai/scripts/split-layout.zsh horizontal
